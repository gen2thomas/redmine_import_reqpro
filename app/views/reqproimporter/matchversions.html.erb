<% content_for :header_tags do %>
    <%= stylesheet_link_tag 'reqproimporter', :plugin => 'redmine_import_reqpro' %>
<% end %>

<% if !flash[:error] %>
	<h2><% if @projects_with_versionattributes_for_view != nil %>
		<%= l(:label_match_versions) %>
	<% else %>
		<%= l(:label_match_norpversions) %>
	<% end %> (<%= @original_filename %>)</h2>
	<% form_tag({:action => 'matchattributes'}, {:multipart => true}) do %>
		<%= render :partial => "progress_bar" %><br/>
		<% if @projects_with_versionattributes_for_view != nil %>
			<h3><%= l(:label_used_versions_headline) %></h3>
			<%= l(:label_matchversions_select) %><br/>
			<br/>
			<table class="list">
				<thead class="text_left"><tr>
			    	<% @headers.each do |column| %>
			      		<th><%= l(column) %></th>
			    	<% end %>
				</tr></thead>
				<tbody>
					<% @projects_with_versionattributes_for_view.each do |projid, attrlables| %>
				    	<%matched = '' %>
				        <tr class="<%= cycle("odd", "even") %>">
						 	<td class="first_column_version"><%= @projects_for_view[projid][:prefix] %>.<%= @projects_for_view[projid][:name] %></td>
						 	<td class="dropdown_column_version"><%= select_tag "fields_map_version[#{projid}]", "<option value=\"\">#{l(:option_ignore)}</option>" +
								options_for_select(attrlables, matched), :style => 'width: 200px;' %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		<% else %>
			<%= l(:label_no_rpversions) %><br/>
		<% end %>
		<h3><%= l(:label_version_import_settings_headline) %></h3>
		<fieldset class="box"><legend><%= l(:label_version_import_settings) %></legend>
			<label><%= check_box_tag "version_update_allowed", true, false %> <%= l(:label_version_update_allowed) %> </label><br/>
		</fieldset>
		<br/>
		<h3><%= l(:label_attributes_checking_settings_headline) %></h3>
		<fieldset class="box"><legend><%= l(:label_attributes_checking_settings) %></legend>
			<label><%= check_box_tag "conflate_attributes", true, true %> <%= l(:label_conflate_attributes) %> </label><br/>
		</fieldset>
		<%= submit_tag l(:button_match_attributes) %><br/><hr/>
		<%= l(:label_attributescheckingsettings_line4) %><br/>
		<%= l(:label_attributescheckingsettings_line5) %><br/>
	<% end %>
<% end %>
<hr/>
